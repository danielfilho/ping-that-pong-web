{
	"name": "ping-that-pong-web",
	"private": true,
	"version": "1.0.0",
	"description": "A fun ping pong score tracking web app",
	"author": "Daniel Filho",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "ADAPTER=static vite build",
		"preview": "npm run build && vite preview --outDir build",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"deploy": "npm run build && wrangler pages deploy build",
		"deploy:preview": "npm run build && wrangler pages deploy build --preview"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.1.1",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.43.8",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"svelte": "^5.39.8",
		"svelte-check": "^4.3.2",
		"typescript": "^5.9.3",
		"vite": "^7.1.9",
		"wrangler": "^4.42.0"
	},
	"dependencies": {
		"@types/hammerjs": "^2.0.46",
		"canvas-confetti": "^1.9.3",
		"cloudflare": "^5.2.0",
		"hammerjs": "^2.0.8",
		"lucide-svelte": "^0.544.0"
	}
}
